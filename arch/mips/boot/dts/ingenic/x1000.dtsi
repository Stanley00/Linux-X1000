	pinctrl: pinctrl@0x10010000 {
		compatible = "ingenic,x1000-pinctrl";
		reg = <0x10010000 0x1000>;
		ingenic,num-chips = <4>;
		ingenic,regs-offset = <0x100>;

		gpa: gpa {
			gpio-controller;
			#gpio-cells = <3>;
			#ingenic,pincfg-cells = <3>;
			#ingenic,pinmux-cells = <2>;
			interrupts = <17>;
			interrupt-parent = <&intc>;
			interrupt-controller;
			#interrupt-cells = <3>;
			ingenic,num-gpios = <32>;
			ingenic,pull-gpios = <0xffffffff>;
		};

		gpb: gpb {
			gpio-controller;
			#gpio-cells = <3>;
			#ingenic,pincfg-cells = <3>;
			#ingenic,pinmux-cells = <2>;
			interrupts = <16>;
			interrupt-parent = <&intc>;
			interrupt-controller;
			#interrupt-cells = <3>;
			ingenic,num-gpios = <32>;
			ingenic,pull-gpios = <0xffffffff>;
		};

		gpc: gpc {
			gpio-controller;
			#gpio-cells = <3>;
			#ingenic,pincfg-cells = <3>;
			#ingenic,pinmux-cells = <2>;
			interrupts = <15>;
			interrupt-parent = <&intc>;
			interrupt-controller;
			#interrupt-cells = <3>;
			ingenic,num-gpios = <32>;
			ingenic,pull-gpios = <0xfffffff>;
		};

		gpd: gpd {
			gpio-controller;
			#gpio-cells = <3>;
			#ingenic,pincfg-cells = <3>;
			#ingenic,pinmux-cells = <2>;
			interrupts = <14>;
			interrupt-parent = <&intc>;
			interrupt-controller;
			#interrupt-cells = <3>;
			ingenic,num-gpios = <6>;
			ingenic,pull-gpios = <0x3f>;
		};
	};

	uart0: serial@0x10030000 {
		compatible = "ingenic,8250-uart";
		reg = <0x10030000 0x100>;
		reg-shift = <2>;

		interrupt-parent = <&intc>;
		interrupts = <51>;

		status = "disabled";
	};

	uart1: serial@0x10031000 {
		compatible = "ingenic,8250-uart";
		reg = <0x10031000 0x100>;
		reg-shift = <2>;

		interrupt-parent = <&intc>;
		interrupts = <50>;

		status = "disabled";
	};
